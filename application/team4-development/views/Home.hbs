  <!-- Title of page -->
  <section class="d-flex justify-content-center">
    <h3>Search Page</h3>
  </section>

  <!-- Search and Filter area -->
  <section>
    <div class="container">
      <div class="row">
        <form class="form-inline w-100" id="tableForm" action="/dropdown" method="get">
          <div class="col-sm-12 d-flex justify-content-center">
            <select class="form-control" data-style="btn-info" name="category_id" id="filter">

              <option name="All" value="0">All</option>
              <optgroup label="Select Category">
                <option name="Litter" value="1">Litter</option>
                <option name="Water Polution" value="2">Water Polution</option>
                <option name="Bio-Hazards" value="3">Bio-Hazards</option>
                <option name="Broken City Property" value="4">Broken City Property</option>
                <option name="Other" value="5">Other</option>
              </optgroup>
              <optgroup label="Select Status">
                <option name="Open" value="6">Open</option>
                <option name="In Progress" value="7">In Progress</option>
                <option name="Resolved" value="8">Resolved</option>
            </select>
            <input id="search" type="text" name="title" placeholder="search by title..." class="form-control w-75" value="">
            <button type="submit" id="searchBtn" class="form-control"><i class="fa fa-search"></i></button>
          </div>
        </form>
      </div>
    </div>
  </section>


  <!-- searcch list  area-->
  <section style="min-height:50%">

    {{#if parks }}
      <div class="container">
        <p class="text-center">{{parks.length}} results found: </p>
        {{#each parks}}
          <div class="container">
            <div class="row">
              <div class="col-sm-1">

              </div>
              <div class="col-sm-10 d-flex justify-content-center">
                <div class="card w-75 m-3">
                  <div class="card-header">
                    {{title}}
                  </div>
                  <div class="card-body">
                    <ul class="list-ìnline d-flex justify-content-between">
                      <!-- <li class="list-inline-item">
                        <h6>Date: <b>{{date}}</b></h6>
                      </li> -->
                      <li class="list-inline-item">
                        <h6>Location: <b>{{location}}</b></h6>
                      </li>
                      <li class="list-inline-item">
                        <h6>Category: <b>{{category}}</b></h6>
                      </li>
                      <li class="list-inline-item">
                        <h6>Status: <b>{{status}}</b></h6>
                      </li>

                      <!-- <li class="list-inline-item">
                        <h6>Status: <b>{{photo}}</b></h6>
                      </li> -->
                      <!-- this is the id for the photo-->

                    </ul>
                    <h6 class="card-title">Description</h6>
                    <p class="card-text">{{description}}</p>

                    <li class="list-inline-item">
                    <h6>Photo:

                      <div class="image-size">
                      <img id="myImg" src="img/flood.jpg" alt="Snow" style=weight>
                       <!-- <img id="myImg" src="{{description}}" alt="Snow" style=weight> -->
                      </div>
                      <!-- The Modal -->
                      <div id="myModal" class="modal">
                        <span class="close">&times;</span>
                        <img class="modal-content" id="img01">
                        <div id="caption"></div>
                      </div>
                    </h6>

<!--thumbnail body-->

                    </li>
                    {{!-- {{      <a href="#" class="btn btn-primary btn-sm float-sm-right" data-toggle="modal" data-target="#showDetails">Show Details</a>  }} --}}
                    <a href="ShowDetailPage.html" class="btn btn-primary btn-sm float-sm-right">Show Details</a>

                  </div>

                </div>
              </div>
              <div class="col-sm-1">

              </div>
            </div>
          </div>

        {{/each}}

    {{else}}
      {{#equal parks.length 0 }}
        <section>
          <div class="h-50 d-flex justify-content-center align-items-center">
            <h6>No records found for current search, try a different category or search keyword</h6>
          </div>
        </section>
      {{/equal}}

    {{/if}}
  </section>

  <!-- Pagination -->
  <section>
